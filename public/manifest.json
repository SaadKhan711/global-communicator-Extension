{
  "manifest_version": 3,
  "name": "Global Communicator",
  "version": "1.0.0",
  "description": "An on-device AI assistant to help you write and communicate effectively.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}